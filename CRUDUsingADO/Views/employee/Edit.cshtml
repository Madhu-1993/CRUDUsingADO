@model CRUDUsingADO.Models.employee

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="eid" class="control-label"></label>
                <input asp-for="eid" class="form-control" readonly/>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ename" class="control-label"></label>
                <input asp-for="ename" class="form-control" />
                <span asp-validation-for="ename" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="dept" class="control-label"></label>
                <input asp-for="dept" class="form-control" />
                <span asp-validation-for="dept" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="salary" class="control-label"></label>
                <input asp-for="salary" class="form-control" />
                <span asp-validation-for="salary" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
